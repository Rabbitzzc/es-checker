{
    "compilerOptions": {
        "strict": true,
        "target": "ES6",
        "module": "CommonJS",
        "declaration": true,
        "declarationDir": "dist/types",
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}